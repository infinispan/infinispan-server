                        receive-buffer-size"0" />
             -->
             
             <!-- Override the default topology state transfer settings -->
             <!--
             <topology-state-transfer lock-timeout="10000"
                                      replication-timeout="10000"
                                      update-timeout="30000"
                                      external-host=""
                                      external-port=""
                                      lazy-retrieval="false" />
             -->
        </subsystem>
    </profile>

    <interfaces>
        <interface name="management">
            <inet-address value="127.0.0.1"/>
        </interface>
        <interface name="public">
           <inet-address value="127.0.0.1"/>
        </interface>
    </interfaces>

    <socket-binding-group name="standard-sockets" default-interface="public">
        <socket-binding name="http" port="8080"/>
        <socket-binding name="https" port="8443"/>
        <socket-binding name="jmx-connector-registry" port="1090"/>
        <socket-binding name="jmx-connector-server" port="1091"/>
        <socket-binding name="jndi" port="1099"/>
        <!--
        <socket-binding name="osgi-http" port="8090"/>
        -->
        <socket-binding name="remoting" port="4447"/>
        <socket-binding name="txn-recovery-environment" port="4712"/>
        <socket-binding name="txn-status-manager" port="4713"/>
        
        <socket-binding name="jgroups-tcp-fd" port="57600"/>
        <socket-binding name="jgroups-tcp" port="7600" />
        <socket-binding name="jgroups-udp-fd" port="54200"/>
        <socket-binding name="jgroups-udp" port="55200" />
        <socket-binding name="jgroups-mping" port="45700" />
        <socket-binding name="jgroups-diagnostics" port="7500" />
        <socket-binding name="hotrod" port="11222"/>
        <socket-binding name="memcached" port="11211"/>
    </socket-binding-group>

</server>
